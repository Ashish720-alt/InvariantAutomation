(set-logic HORN)
(declare-fun |inv| (Int Int) Bool)
(assert (forall ((x Int) (y Int) (xp Int) (yp Int)) (=> (< (+ x (* -1 y)) 0) (inv x y))))
(assert (forall ((x Int) (y Int) (xp Int) (yp Int)) (=> (and (inv x y) (< (+ x (* -1 y)) 0)   (and (= xp (+ x 1)) (= yp y))) (inv xp yp))))
(assert (forall ((x Int) (y Int) (xp Int) (yp Int)) (=> (and (not (< (+ x (* -1 y)) 0)) (inv x y)) (= (+ x (* -1 y)) 0))))
(check-sat)
(get-model)