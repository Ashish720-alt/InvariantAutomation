(set-logic HORN)
(declare-fun |inv| (Int Int Int) Bool)
(assert (forall ((x Int) (m Int) (n Int) (xp Int) (mp Int) (np Int)) (=> (and (= x 0) (= m 0) (> n 0) (> n 0)) (inv x m n))))
(assert (forall ((x Int) (m Int) (n Int) (xp Int) (mp Int) (np Int)) (=> (and (inv x m n) (< (+ x (* -1 n)) 0)   (or (and (= xp (+ x 1)) (= mp m) (= np n)) (and (= xp (+ x 1)) (= mp x) (= np n)))) (inv xp mp np))))
(assert (forall ((x Int) (m Int) (n Int) (xp Int) (mp Int) (np Int)) (=> (and (not (< (+ x (* -1 n)) 0)) (inv x m n)) (and (>= m 0) (< (+ m (* -1 n)) 0)))))
(check-sat)
(get-model)