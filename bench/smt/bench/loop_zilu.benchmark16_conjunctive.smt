(set-logic HORN)
(declare-fun |inv| (Int Int) Bool)
(assert (forall ((i Int) (k Int) (ip Int) (kp Int)) (=> (and (<= (* -1 k) 0) (<= k 1) (= i 1)) (inv i k))))
(assert (forall ((i Int) (k Int) (ip Int) (kp Int)) (=> (and (inv i k)    (and (= ip (+ i 1)) (= kp (+ k -1)))) (inv ip kp))))
(assert (forall ((i Int) (k Int) (ip Int) (kp Int)) (=> (inv i k) (and (<= (+ (* -1 i) (* -1 k)) -1) (<= (+ i k) 2) (>= i 1)))))
(check-sat)
(get-model)