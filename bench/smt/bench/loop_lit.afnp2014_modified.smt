(set-logic HORN)
(declare-fun |inv| (Int Int) Bool)
(assert (forall ((x Int) (y Int) (xp Int) (yp Int))
        (=> (and (= x 2) (= y 2)) (inv x y))))
(assert (forall ((x Int) (y Int) (xp Int) (yp Int)) 
        (=> (and (inv x y) (< y 1000) (= xp (+ x y)) (= yp (+ y 1)))
            (inv xp yp))))
(assert (forall ((x Int) (y Int) (xp Int) (yp Int))
        (=> (and (>= y 1000) (inv x y))
            (>= x y))))
(check-sat)
(get-model)
