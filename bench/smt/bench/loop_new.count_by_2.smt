(set-logic HORN)
(declare-fun |inv| (Int) Bool)
(assert (forall ((i Int) (ip Int)) (=> (= i 0) (inv i))))
(assert (forall ((i Int) (ip Int)) (=> (and (inv i) (< i 1000000)   (and (= ip (+ i 2)))) (inv ip))))
(assert (forall ((i Int) (ip Int)) (=> (and (not (< i 1000000)) (inv i)) (= i 1000000))))
(check-sat)
