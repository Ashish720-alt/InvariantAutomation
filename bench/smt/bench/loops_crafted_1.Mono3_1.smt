(set-logic HORN)
(declare-fun |inv| (Int Int) Bool)
(assert (forall ((x Int) (y Int) (xp Int) (yp Int)) (=> (and (= x 0) (= y 0)) (inv x y))))
(assert (forall ((x Int) (y Int) (xp Int) (yp Int)) (=> (and (inv x y) (< x 1000000) (< x 500000)  (and (= xp (+ x 1)) (= yp (+ y 1)))) (inv xp yp))))
(assert (forall ((x Int) (y Int) (xp Int) (yp Int)) (=> (and (inv x y) (< x 1000000) (>= x 500000) (not (or  (< x 500000))) (and (= xp (+ x 1)) (= yp (+ y -1)))) (inv xp yp))))
(assert (forall ((x Int) (y Int) (xp Int) (yp Int)) (=> (and (not (< x 1000000)) (inv x y)) (or (> y 0) (< y 0)))))
(check-sat)
(get-model)